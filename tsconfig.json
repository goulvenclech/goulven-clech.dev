{
  "extends": "astro/tsconfigs/strict",
	"include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
    "baseUrl": ".",
    "moduleResolution": "Bundler",
    "types": ["astro/env"],
    "paths": {
      "$components/*": ["src/components/*"],
      "$layouts/*": ["src/layouts/*"],
      "$assets/*": ["src/assets/*"]
    }
  }
}
