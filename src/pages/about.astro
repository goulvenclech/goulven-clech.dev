---
import Layout from "$layouts/Layout.astro"
import GithubInline from "$components/typography/GithubInline.astro"

import Changelog from "$components/changelog/Changelog.astro"
import ReturnHome from "$components/controls/ReturnHome.astro"

/**
 * Misc page with legal notice, changelog, etc.
 */
const pageTitle = "About"
---

<Layout title={pageTitle}>
	<section>
		<h1>{pageTitle}</h1>
		<p>All the boring stuff. Legal, colophon, changelog, and maybe more.</p>
		<p><ReturnHome /></p>
	</section>
	<section>
		<h2 id="legal_notice">Legal notice</h2>
		<p>
			<strong>Published by:</strong>
			<GithubInline user="35667800" />, domiciled in Toulouse, France. Contact me by
			<a href="mailto:goulven.clech@protonmail.com">email</a>.
		</p>
		<p>
			<strong>Hosted by:</strong>
			<a href="https://www.netlify.com/">Netlify</a>, domiciled in San Francisco, California, <abbr
				title="United States of America">USA</abbr
			>. Contact them by <a href="mailto:support@netlify.com.">email</a>.
		</p>
		<p>
			<strong>Data & cookies policy:</strong>
			This website does not use cookies. It does not collect any personal data. Analytics are anonymized
			and aggregated.
		</p>
		<p>
			<strong>Licenses:</strong>
