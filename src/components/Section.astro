---
/**
 * A classic section of our blog
 * @param {string} title - What is this section about?
 */
interface Props {
  title: string
}

const { title } = Astro.props
---

<section class="my-12 sm:my-24">
  <h2 class="dark:text-accent-dark text-accent-light pb-6 text-2xl font-bold sm:text-3xl">
    {title}
  </h2>

  <slot />
</section>
