---
/**
 * Used to present a Youtube video.
 * @param {any} id - What's this exciting video's id?
 */
interface Props {
	id: string
}

const { id } = Astro.props
---

<iframe
	loading="lazy"
	class="my-5 aspect-video w-full rounded"
	src={`https://www.youtube.com/embed/${id}`}
	title="YouTube video player"
	allowfullscreen></iframe>
