---
/**
 * Used to standardize our external hyperlinks across the blog
 * @param {string} to - Where are we going? (external)
 */
interface Props {
  to: string
}

const { to } = Astro.props
---

<a
  href={to}
  class="not-prose dark:text-accent-dark text-accent-light whitespace-nowrap font-bold hover:text-primary dark:hover:text-primary"
  ><slot /><i class="fa-solid fa-square-up-right ml-1 w-[10.5px] text-[0.6rem]"></i></a
>
