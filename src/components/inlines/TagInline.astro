---
/**
 * A link to a specific tag of our blog, with a cool icon
 * @param {string} tag - What tag are we going to?
 */
interface Props {
  tag: string
}

const { tag } = Astro.props
---

<a
  href={`/tag-${tag}`}
  class="text-font-light dark:text-font-dark whitespace-nowrap font-bold capitalize hover:text-primary dark:hover:text-primary"
>
  <i class="fa-solid fa-tag mr-1 text-xs"></i>{tag}</a
>
