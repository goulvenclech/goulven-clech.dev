---
import BaseLayout from "./BaseLayout.astro"
import Footer from "./Footer.astro"
/**
 * Simple layout for all our mains pages.
 * Roughly, wrap our content into a container with the header & footer ü§∑‚Äç‚ôÇÔ∏è
 * @param {string} title - What is this page about?
 */
interface Props {
	title: string
	description?: string
	img?: string
}

const { title, description, img } = Astro.props
---

<BaseLayout title={title} description={description} img={img}>
	<Fragment slot="head">
		<slot name="head" />
	</Fragment>
	<main>
		<slot />
		<Footer />
	</main>
</BaseLayout>
