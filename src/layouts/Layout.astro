---
import BaseLayout from "./BaseLayout.astro"
import Footer from "./Footer.astro"
/**
 * Simple layout for all our mains pages.
 * Roughly, wrap our content into a container with the header & footer ü§∑‚Äç‚ôÇÔ∏è
 * @param {string} title - What is this page about?
 */
interface Props {
	title: string
	description?: string
	img?: string
	icon?: string
}

const { title, description, img, icon } = Astro.props
---

<BaseLayout title={title} description={description} img={img} icon={icon}>
	<main class="mx-auto max-w-[650px] px-4 md:px-0">
		<slot />
		<Footer />
	</main>
</BaseLayout>
